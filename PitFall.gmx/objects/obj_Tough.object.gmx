        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Decide what NPC is do this tick
key_right = 0;
key_left = 0;
key_jump = 0;

// get refence to mrPomp so that I can find out where he is relative to me
mrPomp = instance_find(obj_Pomp,1);  // 1 because there is only 1 Mr. Pomp

// go left because Mr. Pomp is to my left
if (mrPomp.x &lt; x)
{
    hsp = -movespeed;
}
// go right because Mr. Pomp is to my left
else if (mrPomp.x &gt; x)
{
    hsp = movespeed;
}
// I'm right above Mr. Pomp
else
{
    hsp = 0;
}

// if I'm about to step off a platform, then turn around
// going right
if (hsp &gt; 0)
{
    // if in this tick half of my width will be off a solid, then turn around
    if (!place_meeting(x + hsp +60,y+1,obj_SolidBase))
    {
        hsp = -hsp;
    }
}
else if (hsp &lt; 0)
{
    // if in this tick half of my width will be off a solid, then turn around
    if (!place_meeting(x - hsp -60,y+1,obj_SolidBase))
    {
        hsp = -hsp;
    }
}

// apply gravity
if (vsp &lt; 10) vsp += grav;

// Jump when "on" the ground (technically, when 1 pixel below is ground)
if (place_meeting(x,y+1,obj_SolidBase))
{
    vsp = key_jump * -jumpspeed;
}


</string>
